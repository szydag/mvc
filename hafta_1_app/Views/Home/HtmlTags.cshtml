
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<!--Hypertext Markup Language-->
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Html Tags Sayfası</title><!--html sayfanın isimlendirilmesi için kullanılır. Sekme üzerinde yazan text ifadesi-->
   
    
    <!--CSS: Cascading Style Sheets -->
    <style>
        .table {
            border-collapse: separate;
            border-spacing: 10px;
        }

            .table,
            .table tr,
            .table td,
            .table th {
                border: 1px solid #bbb;
                padding: 5px;
            }

        #Baslik_Div {
            background-color: red;
        }

        p {
            color: blue;
        }
    </style>


</head>
<body>
    <div id="Baslik_Div">
        <h2>Başlık yapısı</h2>


        <h1>Bu bir H1 Başlığıdır</h1>
